@model GerenciadorJogos.Models.Jogo

<h1 class="titulo-principal">Deletar Jogo</h1>
<h3 class="mensagem">Tem certeza que deseja deletar "<span class="titulo">@Model.Titulo</span>"?</h3>

<form asp-action="DeleteConfirmed" method="post" class="deletar-form">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="botoes">
        <button type="submit" class="btn-deletar">🗑️ Deletar</button>
        <a asp-action="Index" class="btn-cancelar">Cancelar</a>
    </div>
</form>


    <style>
        body {
            background-color: #02101F;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
            text-align: center;
            margin-top: 80px;
        }

        .titulo-principal {
            color: #ff3b3b;
            text-shadow: 0 0 15px #ff3b3b;
            font-size: 2.2rem;
            margin-bottom: 15px;
        }

        .mensagem {
            font-size: 1.3rem;
            color: #fff;
        }

        .titulo {
            color: cyan;
            text-shadow: 0 0 10px cyan;
            font-weight: bold;
        }

        .deletar-form {
            background-color: #0B1A2D;
            border: 1px solid #ff3b3b;
            box-shadow: 0 0 20px #ff3b3b;
            border-radius: 15px;
            display: inline-block;
            padding: 30px 50px;
            margin-top: 40px;
        }

        .botoes {
            margin-top: 25px;
        }

        .btn-deletar {
            background-color: #ff3b3b;
            color: white;
            border: none;
            padding: 12px 28px;
            border-radius: 10px;
            font-weight: bold;
            font-size: 1rem;
            transition: 0.3s;
            box-shadow: 0 0 10px #ff3b3b;
        }

            .btn-deletar:hover {
                background-color: #ff5c5c;
                box-shadow: 0 0 20px #ff3b3b;
                transform: scale(1.05);
            }

        .btn-cancelar {
            background-color: #444;
            color: white;
            text-decoration: none;
            padding: 12px 28px;
            border-radius: 10px;
            margin-left: 10px;
            font-weight: bold;
            transition: 0.3s;
        }

            .btn-cancelar:hover {
                background-color: #666;
                box-shadow: 0 0 15px cyan;
                transform: scale(1.05);
            }

        @@keyframes brilho {
            0%, 100% {
                box-shadow: 0 0 15px #ff3b3b;
            }

            50% {
                box-shadow: 0 0 30px #ff3b3b;
            }
        }
    </style>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}