@model List<GerenciadorJogos.Models.Jogo>

@{
    ViewData["Title"] = "Lista de Jogos";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap">

<style>
    body {
        background-color: #0a0f1a;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        text-align: center;
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
        margin-top: 30px;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #00bfff;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 6px;
        transition: 0.3s;
        box-shadow: 0 0 10px #00bfff;
    }

        .btn-primary:hover {
            background-color: #00ffff;
            box-shadow: 0 0 15px #00ffff;
        }

    table {
        width: 90%;
        margin: 30px auto;
        border-collapse: collapse;
        border: 1px solid #00ffff;
        box-shadow: 0 0 15px #00ffff33;
        background-color: #111827;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 16px;
        text-align: left;
    }

    th {
        color: #00ffff;
        border-bottom: 2px solid #00ffff;
        text-shadow: 0 0 5px #00ffff;
    }

    tr:nth-child(even) {
        background-color: #1a2130;
    }

    tr:hover {
        background-color: #0e1a25;
        box-shadow: inset 0 0 10px #00ffff44;
    }

    a {
        color: #00bfff;
        text-decoration: none;
        transition: 0.3s;
    }

        a:hover {
            color: #00ffff;
            text-shadow: 0 0 5px #00ffff;
        }

    .action-links a {
        margin-right: 8px;
    }

    .add-btn-container {
        text-align: center;
        margin-top: 20px;
    }
</style>

<h1>Lista de Jogos</h1>

<div class="add-btn-container">
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Jogo</a>
</div>

<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Ano</th>
            <th>Plataformas</th>
            <th>Gêneros</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jogo in Model)
        {
            <tr>
                <td>@jogo.Titulo</td>
                <td>@jogo.Ano</td>
                <td>@string.Join(", ", jogo.JogoPlataformas.Select(jp => jp.Plataforma.Nome))</td>
                <td>@string.Join(", ", jogo.JogoGeneros.Select(jg => jg.Genero.Nome))</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@jogo.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@jogo.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@jogo.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>